/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "outDir": "./out-tsc/spec",
      "types": [
          "jasmine",
          "jest",
          "node"
      ],
      "baseUrl": "./",
      "paths": {
          "@tool/*": [ "src/app/tool/*" ],
          "@models/*": [ "src/app/models/*" ],
          "@services/*": [ "src/app/services/*" ],
          "@components/*": [ "src/app/components/*" ],
          "@interfaces/*": [ "src/app/interfaces/*" ]
      }
  },
  "files": [
      "src/test.ts",
      "src/polyfills.ts"
  ],
  "include": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
  ]
}